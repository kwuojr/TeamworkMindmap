<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_fragment_bg_radius"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="标题"
                android:textColor="#000000"
                android:textSize="25sp" />

            <View
                android:layout_width="400dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_top_space_small"
                android:layout_marginBottom="@dimen/margin_bottom_space_small"
                android:layout_alignTop="@+id/dialog_edit_check_state"
                android:background="@color/charade" />

            <RelativeLayout
                android:id="@+id/dialog_edit_check_state"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="14dp"
                android:gravity="top">

                <EditText
                    android:id="@+id/et_main"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/edit_bg"
                    android:gravity="top"
                    android:hint="输入节点信息"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:padding="@dimen/padding_normal_big"
                    android:scrollHorizontally="false"
                    android:textColor="@color/jaguar"
                    android:textSize="@dimen/text_size_menu" />

                <Button
                    android:id="@+id/bt_cancel"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_main"
                    android:layout_marginTop="10dp"
                    android:text="取消" />

                <ImageView
                    android:id="@+id/iv_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/et_main"
                    android:src="@mipmap/clear_input" />

                <Button
                    android:id="@+id/bt_confirm"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_main"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/bt_cancel"
                    android:layout_marginTop="10dp"
                    android:text="确认" />

            </RelativeLayout>

        </RelativeLayout>




    </ScrollView>



</AbsoluteLayout>